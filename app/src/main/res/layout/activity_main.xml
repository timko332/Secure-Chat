<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_slate"
    android:padding="24dp">

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/glass_input"
        android:alpha="0.15"
        android:rotation="45"
        android:translationX="80dp"
        android:translationY="-80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/glass_input"
        android:alpha="0.15"
        android:rotation="45"
        android:translationX="-80dp"
        android:translationY="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        app:tint="@color/accent_teal"
        android:layout_marginBottom="16dp"

        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.65"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECURE CHAT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toBottomOf="@+id/ivIcon"
        app:layout_constraintBottom_toTopOf="@+id/tvMyDeviceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMyDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me: Fetching..."
        android:textColor="@color/accent_teal"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to scan"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyDeviceName"
        app:layout_constraintBottom_toTopOf="@+id/rvDevices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDevices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="300dp"

        app:layout_constraintTop_toBottomOf="@+id/tvStatus"
        app:layout_constraintBottom_toTopOf="@+id/tvSeeMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSeeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more devices..."
        android:textColor="@color/accent_teal"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rvDevices"
        app:layout_constraintBottom_toTopOf="@+id/btnConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConnect"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/glass_ghost_button"
        android:text="SCAN FOR DEVICES"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSeeMore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>