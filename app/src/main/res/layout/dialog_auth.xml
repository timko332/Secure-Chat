<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/modern_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvAuthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Check"
        android:textColor="@color/accent_teal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAuthDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection request received."
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthTitle" />

    <TextView
        android:id="@+id/tvSecurityCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="592 013"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/glass_input"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.1"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthDesc" />

    <EditText
        android:id="@+id/etAuthCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/glass_input"
        android:hint="Enter Code"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthDesc" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAuthAction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/glass_ghost_button"
        android:text="VERIFY"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etAuthCode" />

</androidx.constraintlayout.widget.ConstraintLayout>